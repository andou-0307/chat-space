.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__member-rist
        Memberï¼š
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .main-header__edit-btn
      = link_to "Edit", edit_group_path(@group) ,class: 'Edit'
  
  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      .form-mask
        = f.text_field :content, class: 'form-mask__message', placeholder: 'type a message'    
        = f.label :image, class: 'form-mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'form-mask__image__hidden'
      = f.submit 'Send', class: 'form__submit'